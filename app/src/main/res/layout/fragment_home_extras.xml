                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Library"
                    android:id="@+id/textView2"
                    android:layout_gravity="start"
                    android:layout_margin="5sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="12sp"
                    android:id="@+id/imageView17"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/actionbar"/>

                <android.support.constraint.ConstraintLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:padding="5dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:id="@+id/linearLayout5">

                        <Button
                            android:id="@+id/button9"
                            android:textSize="15sp"
                            android:background="@drawable/libraryicon"
                            android:layout_width="@dimen/box_size"
                            android:layout_height="@dimen/box_size"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:nestedScrollingEnabled="false"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal|bottom"
                            android:textColor="#ffffff"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:onClick="onLibraryClick" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Library"
                            android:id="@+id/textView14"
                            android:gravity="bottom"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_weight="1"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        app:layout_constraintLeft_toRightOf="@+id/linearLayout5"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/linearLayout6"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/button10"
                            android:textSize="15sp"
                            android:layout_width="@dimen/box_size"
                            android:layout_height="@dimen/box_size"
                            android:background="@drawable/queueicon"
                            android:layout_row="3"
                            android:layout_column="2"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal|bottom"
                            android:textColor="#ffffff"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Queue"
                            android:id="@+id/textView15"
                            android:gravity="bottom"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_weight="1"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:onClick="onSocialClick"
                        android:clickable="true"
                        app:layout_constraintLeft_toRightOf="@+id/linearLayout6"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/linearLayout7"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp">

                        <Button
                            android:id="@+id/button13"
                            android:textSize="15sp"
                            android:layout_width="@dimen/box_size"
                            android:layout_height="@dimen/box_size"
                            android:background="@drawable/socialicon"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:gravity="center_horizontal|bottom"
                            android:textColor="#ffffff"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:onClick="onSocialClick"
                            android:clickable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Social"
                            android:id="@+id/textView16"
                            android:gravity="bottom"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_weight="1"
                            android:textSize="20sp"
                            android:onClick="onSocialClick"
                            android:clickable="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:background="#ffffff"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                        <Button
                            android:id="@+id/button16"
                            android:layout_width="@dimen/box_size"
                            android:layout_height="@dimen/box_size"
                            android:layout_column="1"
                            android:layout_columnSpan="1"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center"
                            android:layout_row="3"
                            android:layout_rowSpan="1"
                            android:layout_rowWeight="1"
                            android:background="@drawable/timetableicon"
                            android:gravity="center_horizontal|bottom"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal|bottom"
                            android:layout_weight="1"
                            android:gravity="bottom"
                            android:text="ATM"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="20sp" />
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Bath City"
                    android:id="@+id/textView18"
                    android:layout_gravity="left"
                    android:layout_margin="5sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="12sp"
                    android:id="@+id/imageView18"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/actionbar"
                    android:layout_marginTop="5sp"
                    android:layout_marginBottom="5sp" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/horizontalScrollView5"
                    android:layout_gravity="left"
                    android:scrollIndicators="none"
                    android:scrollbars="none">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <Button
                            android:id="@+id/button17"
                            android:text="+"
                            android:textSize="15sp"
                            android:layout_width="@dimen/box_size"
                            android:layout_height="@dimen/box_size"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:layout_gravity="center"
                            android:background="#191c65"
                            android:textColor="#ffffff"
                            android:layout_margin="10sp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
