<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="55dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_social"
    tools:context="tom.smally.Social"
    android:orientation="vertical"
    android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/clubLogo"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:focusableInTouchMode="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status"
            android:id="@+id/clubStatus"
            android:layout_gravity="center_horizontal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView3"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/linearLayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:id="@+id/clubInfoLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="officeInfo"
                        android:id="@+id/officeInfo"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Ticket Link"
                        android:id="@+id/ticketLink"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Opening Times"
                        android:id="@+id/openingTimes"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Location"
                        android:id="@+id/location"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Club Text"
                        android:id="@+id/clubText"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Club Drinks"
                        android:id="@+id/clubDrinks"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/contact"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:textIsSelectable="true"
                        android:clickable="true"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/email"
                        android:layout_gravity="left"
                        android:textIsSelectable="true"
                        android:clickable="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="2dp"
                        android:typeface="sans" />

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/fbimg"
                    android:src="@drawable/fbimg"
                    android:layout_margin="10dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/twimg"
                    android:src="@drawable/twimg"
                    android:layout_margin="10dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/inimg"
                    android:src="@drawable/inimg"
                    android:layout_margin="10dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/gglimg"
                    android:src="@drawable/gglimg"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </RelativeLayout>

</LinearLayout>
