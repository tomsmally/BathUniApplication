<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/app_bar_social">

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewFlipper3"
        android:animateFirstView="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="#ffffff"
            android:paddingLeft="7sp"
            android:paddingRight="7sp"
            android:paddingTop="70sp">

            <TextView
                android:text="Campus:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#010101"
                android:textSize="15dp"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp" />

            <Button
                android:text="Drama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="klassClick"
                android:background="#191c65"
                android:layout_margin="5dp"
                android:textColor="#ffffff" />

            <Button
                android:text="Music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="scoreClick"
                android:background="#191c65"
                android:layout_margin="5dp"
                android:textColor="#ffffff" />

            <Button
                android:text="Live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button5"
                android:onClick="plugClick"
                android:background="#191c65"
                android:layout_margin="5dp"
                android:textColor="#ffffff" />

            <TextView
                android:text="City:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#010101"
                android:textSize="15dp"
                android:layout_gravity="left"
                android:paddingLeft="20sp"
                android:paddingTop="5sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView2"
                android:paddingBottom="10sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal|top">

                    <Button
                        android:text="BathFest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/zerozeroButton"
                        android:onClick="zeroClick"
                        android:background="#191c65"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff" />
                    <Button
                        android:text="Bath Literature Festival"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/nestButton"
                        android:onClick="nestClick"
                        android:background="#191c65"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff" />
                    <Button
                        android:text="Bridge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bridgeButton"
                        android:onClick="bridgeClick"
                        android:background="#191c65"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff" />
                    <Button
                        android:text="Weir Lounge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/weirButton"
                        android:onClick="weirClick"
                        android:background="#191c65"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff" />

                    <Button
                        android:text="Club XL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/xlButton"
                        android:onClick="xlClick"
                        android:background="#191c65"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff" />

                    <Button
                        android:text="Komedia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/komediaButton"
                        android:onClick="komediaClick"
                        android:background="#191c65"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff" />

                    <Button
                        android:text="Po Na Na"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/poButton"
                        android:onClick="poClick"
                        android:background="#191c65"
                        android:layout_margin="5dp"
                        android:textColor="#ffffff" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="70sp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/app_bar_social"
            tools:context="tom.smally.Social"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/clubLogo"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Status"
                android:id="@+id/clubStatus"
                android:layout_gravity="center_horizontal" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView3"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/linearLayout"
                android:paddingLeft="7sp"
                android:paddingRight="7sp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:id="@+id/clubInfoLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="officeInfo"
                        android:id="@+id/officeInfo"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Ticket Link"
                        android:id="@+id/ticketLink"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Opening Times"
                        android:id="@+id/openingTimes"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Location"
                        android:id="@+id/location"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Club Text"
                        android:id="@+id/clubText"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Club Drinks"
                        android:id="@+id/clubDrinks"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/contact"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:textIsSelectable="true"
                        android:clickable="true"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/email"
                        android:layout_gravity="left"
                        android:textIsSelectable="true"
                        android:clickable="true"
                        android:layout_marginLeft="2dp"
                        android:layout_marginBottom="2dp"
                        android:typeface="sans" />

                </LinearLayout>
            </ScrollView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="false"
                    android:id="@+id/linearLayout"
                    android:background="#d7d7d7"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/fbimg"
                        android:src="@drawable/fbimg"
                        android:layout_margin="10dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/twimg"
                        android:src="@drawable/twimg"
                        android:layout_margin="10dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/inimg"
                        android:src="@drawable/inimg"
                        android:layout_margin="10dp" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/gglimg"
                        android:src="@drawable/gglimg"
                        android:layout_margin="10dp" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </ViewFlipper>

</LinearLayout>