                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Uni"
                        android:id="@+id/textView4"
                        android:layout_gravity="left"
                        android:layout_margin="5sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="12sp"
                        android:id="@+id/imageView7"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/actionbar" />

                    <android.support.constraint.ConstraintLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:scrollIndicators="none">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:id="@+id/linearLayout10">

                            <Button
                                android:id="@+id/button15"
                                android:textSize="15sp"
                                android:layout_width="@dimen/box_size"
                                android:layout_height="@dimen/box_size"
                                android:background="@drawable/radio"
                                android:layout_row="3"
                                android:layout_column="0"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal|bottom"
                                android:textColor="#ffffff"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Radio"
                                android:id="@+id/textView11"
                                android:gravity="bottom"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_weight="1"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            app:layout_constraintLeft_toRightOf="@+id/linearLayout10"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:id="@+id/linearLayout11">

                            <Button
                                android:id="@+id/button8"
                                android:textSize="15sp"
                                android:layout_width="@dimen/box_size"
                                android:layout_height="@dimen/box_size"
                                android:onClick="onTravelClick"
                                android:background="@drawable/travelicon3"
                                android:layout_row="1"
                                android:layout_column="2"
                                android:textColor="#ffffff"
                                android:layout_gravity="center"
                                android:gravity="center_horizontal|bottom"
                                android:nestedScrollingEnabled="false"
                                android:layout_columnSpan="1"
                                android:layout_rowSpan="1"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Travel"
                                android:id="@+id/textView6"
                                android:gravity="bottom"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_weight="1"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            app:layout_constraintLeft_toRightOf="@+id/linearLayout11"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp">

                            <Button
                                android:id="@+id/button4"
                                android:textSize="15sp"
                                android:layout_width="@dimen/box_size"
                                android:layout_height="@dimen/box_size"
                                android:background="@drawable/foodicon"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:gravity="center_horizontal|bottom"
                                android:textColor="#ffffff"
                                android:layout_columnSpan="1"
                                android:layout_rowSpan="1"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:onClick="onFoodClick" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Food"
                                android:id="@+id/textView13"
                                android:gravity="bottom"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_weight="1"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:layout_marginLeft="8dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout10"
                            android:id="@+id/linearLayout12">

                            <Button
                                android:id="@+id/button14"
                                android:textSize="15sp"
                                android:layout_width="@dimen/box_size"
                                android:layout_height="@dimen/box_size"
                                android:background="@drawable/sporticon2"
                                android:layout_row="2"
                                android:layout_column="1"
                                android:gravity="center_horizontal|bottom"
                                android:layout_gravity="center"
                                android:textColor="#00398D"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Sport"
                                android:id="@+id/textView8"
                                android:gravity="bottom"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_weight="1"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#ffffff"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toRightOf="@+id/linearLayout12"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

                            <Button
                                android:id="@+id/button7"
                                android:layout_width="@dimen/box_size"
                                android:layout_height="@dimen/box_size"
                                android:layout_column="0"
                                android:layout_columnSpan="1"
                                android:layout_columnWeight="1"
                                android:layout_gravity="center"
                                android:layout_row="4"
                                android:layout_rowSpan="1"
                                android:layout_rowWeight="1"
                                android:background="@drawable/eventicon2"
                                android:gravity="center_horizontal|bottom"
                                android:nestedScrollingEnabled="false"
                                android:textColor="#ffffff"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal|bottom"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:text="Events"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
